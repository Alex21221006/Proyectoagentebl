<template id="report_agent_receipt">
    <t t-call="web.basic_layout">

        <!-- Contenedor obligatorio para permitir adjuntos -->
        <div class="page"
             t-att-data-oe-model="o._name"
             t-att-data-oe-id="o.id">

            <t t-foreach="docs" t-as="o">

                <h2 style="text-align:center;">
                    Agente Multibanco B&amp;L
                </h2>

                <p style="text-align:center; font-size:12px;">
                    <t t-esc="o.company_id.name or 'Mi Empresa'"/>
                </p>

                <hr/>

                <p><strong>Boleta:</strong> <t t-esc="o.name"/></p>
                <p><strong>Fecha:</strong> <t t-esc="o.date"/></p>
                <p><strong>Operador:</strong> <t t-esc="o.operator_id.name"/></p>

                <hr/>

                <p><strong>Banco / Red:</strong> <t t-esc="o.bank"/></p>
                <p><strong>Tipo de movimiento:</strong> <t t-esc="o.movement"/></p>
                <p><strong>N째 cuenta / N째 celular:</strong> <t t-esc="o.account or ''"/></p>

                <hr/>

                <p><strong>Solicitante</strong></p>
                <p>DNI: <t t-esc="o.solicitante_dni or ''"/></p>
                <p>Nombre: <t t-esc="o.solicitante_nombre or ''"/></p>

                <p><strong>Beneficiario</strong></p>
                <p>DNI: <t t-esc="o.beneficiario_dni or ''"/></p>
                <p>Nombre: <t t-esc="o.beneficiario_nombre or ''"/></p>

                <hr/>

                <p>
                    <strong>Monto:</strong>
                    <span t-field="o.amount"
                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                </p>

                <p>
                    <strong>Comisi처n:</strong>
                    <span t-field="o.fee"
                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                </p>

                <p>
                    <strong>Total:</strong>
                    <span t-field="o.total"
                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                </p>

                <hr/>

                <p style="font-size:10px; text-align:center;">
                    Gracias por su operaci처n.
                </p>

            </t>
        </div>
    </t>
</template>
